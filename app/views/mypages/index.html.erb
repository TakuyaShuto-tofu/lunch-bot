<div class="mypage">
  <div class="card" style="width: 30rem;">
    <%= image_tag current_user.profile_image.url, class: "card-img-top mypage_profile_image" %>
    <div class="card-body">
      <h5 class="card-title">ユーザー名：<%= current_user.name %></h5>
      <p class="card-text">一言：<%= current_user.self_introduction %></p>
    </div>
    <ul class="list-group list-group-flush">
      <li class="list-group-item mypage">メールアドレス：<%= current_user.email %></li>
      <li class="list-group-item mypage">訪問回数：<%= current_user.stores.count %></li>
    </ul>
    <div class="card-body">
      <%= link_to "メールアドレス・パスワードを変更する", edit_user_registration_path, class: "card-link btn btn-info text-white" %>
    </div>
  </div>
</div>

