<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>
  <div class="form">
    <div class="session_form">
      <div class="field_form">
        <%= f.label :メールアドレス %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "email" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="field_form">
        <%= f.label :パスワード（パスワードを変更しない場合は入力不要） %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "email" %>
        <% if @minimum_password_length %>
          <br />
          <em>※パスワードは6文字以上</em>
        <% end %>
      </div>

      <div class="field_form">
        <%= f.label :確認用パスワード（パスワードを変更しない場合は入力不要） %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "email" %>
      </div>

      <div class="field_form">
        <%= f.label :現在のパスワード（入力必須） %><br />
        <%= f.password_field :current_password, autocomplete: "current-password", class: "email" %>
      </div>

      <div class="actions">
        <%= f.submit "更新する", class: "actions_login_btn" %>
      </div>
    </div>
  </div>
<% end %>
<div class="to_top_page">
  <%= link_to "マイページに戻る", mypages_path, class: 'top_page_btn' %>
</div>
