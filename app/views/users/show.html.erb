<div class="card" style="width: 30rem;">
  <div class="card-body">
    <h5 class="card-title"><%= image_tag @user.profile_image.url, class: "profile_image" %><%= @user.name %></h5>
    <p class="card-text"><%= @user.self_introduction %></p>
    <%= link_to follows_user_path(@user), class: "card-link" do %>
      <span>フォロー<%= @following_users.count %></span>
    <% end %>
    <%= link_to followers_user_path(@user), class: "card-link" do %>
      <span>フォロワー<%= @follower_users.count %></span>
    <% end %>
  </div>
</div>
<div class="edit_user_info">
  <%= link_to "ユーザー情報を編集する", edit_user_path, class: 'edit_user_btn' %>
</div>
