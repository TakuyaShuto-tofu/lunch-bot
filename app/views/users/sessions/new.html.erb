<%= form_for(resource, as: resource_name, url: session_path(resource_name), data: {turbo: false}) do |f| %>
  <div class="form">
    <div class="session_form">
      <div class="field_form">
        <%= f.label :メールアドレス, class: "form_title" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "email" %>
      </div>

      <div class="field_form">
        <%= f.label :パスワード, class: "form_title" %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: "password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field_form">
          <div class="check_box_title">
            <%= f.check_box :remember_me, class: "check_box" %>
            <%= f.label :パスワードを記憶する, class: "form_title" %> 
          </div>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "ログイン", class: "actions_login_btn" %>
      </div>

      <div class="forget_password">
        <%= link_to "パスワードをお忘れですか？", new_password_path(resource_name), class: "password_path" %>
      </div>
    </div>
  </div>
<% end %>

