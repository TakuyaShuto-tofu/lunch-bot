<div class="top_page">
  <% if user_signed_in? %>
    <h5 class="subtitle">ようこそ<%= current_user.email %>さん </h5>
  <% else %>
    <div class="login">
      <h5 class="login_message"> 現在ログインしていません </h5>
      <div class="login_form">
        <%= link_to "ログインする", new_user_session_path, class: 'login_btn' %>
      </div>
    </div>
  <% end %>
</div>

<h3>タイムライン</h3>
<div class="card_wrap">
  <% @stores.each do |store| %>
    <div class="card card_content" style="width: 18rem;">
      <ul class="list-group list-group-flush">
        <li class="list-group-item">ユーザー名：<%= store.user.email %></li>
        <li class="list-group-item">日付：<%= store.date %></li>
        <li class="list-group-item">店名：<%= store.store_name %></li>
        <li class="list-group-item">感想：<%= store.comment %></li>
      </ul>
    </div>
  <% end %>
</div>
